{% from 'macroses.j2' import day_name, start_time, end_time, diff %}

{%- if diff(send_time, events_time) == '0' -%}
  Сегодня 
{%- elif diff(send_time, events_time) == '1' -%}
  Завтра
{%- else -%}
  {{ events_time.strftime('%d.%m') }}
{%- endif -%}

, {{ day_name(events_time.isoweekday()) }}

{%- if total_summaries != [] -%}
  {%- if total_summaries | length == 1 -%}
    , {{ total_summaries[0] }}
  {%- else -%}
    {% for total_summary in total_summaries +%}
      {# newline #}
      {{- total_summary -}}
    {% endfor %}
  {%- endif -%}
{%- endif -%}

{% if events %}
  {%- if events[0]['summary'] == '' -%}
    {%- set list = namespace(simple = False) -%}

    {# space #} {# space #}

    {%- for event in events %}
      {% if not loop.first %}
        {% if loop.last -%}
          {# space #} и {# space #}
        {%- else -%}
          , {# space #}
        {%- endif %}
      {% endif -%}

      {% if event['transparency'] == 'transparent' -%} 
        {% set list.simple = False -%}

        с {{ start_time(event) }} до {{ end_time(event) }}
      {%- else -%}
        {% if not list.simple -%}
          в {# space #}

          {%- set list.simple = True -%}
        {% endif -%}

        {{ start_time(event) }} 
      {%- endif %}
    {%- endfor %}
  {%- else %}
    {% for event in events +%}
      {# newline #}
      {{- start_time(event) }}

      {%- if event['transparency'] == 'transparent' -%} 
        -{{ end_time(event) }}
      {%- endif -%} 
      {# space #} - {{ event['summary'] -}}
    {% endfor %}
  {% endif %}
{% elif total_summary == [] %}
  Ничего не будет.
{% endif %}
